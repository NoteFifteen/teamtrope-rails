<% provide(:title, 'Sign up') %>
<div id="content">
  <div class="padder">
    <h1>Sign up</h1>
    <div class="row">
      <div class="span6 offset3">
        <%= form_for(@user) do |f| %>
          <%= render 'fields', f: f %><br />
          <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>